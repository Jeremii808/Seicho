<Page
    x:Class="SEICHOU_WPA_8._1.characterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SEICHOU_WPA_8._1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name = "grid" Height="640" Margin="0,0,0,-0.333" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="369*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="background" HorizontalAlignment="Center" Height="100" Margin="0,0,0,0" VerticalAlignment="Center" Width="100" Source="Assets/CharacterSelect.jpg" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <CompositeTransform ScaleY="9" ScaleX="4"/>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="femalePlayer" HorizontalAlignment="Left" Height="502" Margin="97.604,-24,-20,0" VerticalAlignment="Top" Width="291" Source="Assets/PlayerFemale.png" Stretch="UniformToFill" Grid.Column="1"/>
        <Button x:ConnectionId='1' x:Name="createButton" Content="Create" HorizontalAlignment="Left" Margin="116.167,513,0,70" VerticalAlignment="Center"                            RenderTransformOrigin="0.5,0.5" Grid.Column="1" FontFamily="Honoka Antique-Maru"/>
        <TextBox x:ConnectionId='2' x:Name="playerName_TextBox" HorizontalAlignment="Left" Margin="107.167,461,0,0" VerticalAlignment="Top" Width="244" PlaceholderText="Enter name" MaxLength="12"                                      Grid.Column="1" FontFamily="Honoka Antique-Maru" Height="33"                                     />
        <Button x:ConnectionId='3' x:Name="maleButton" Content="Male" HorizontalAlignment="Left" Margin="5.604,156,0,0" VerticalAlignment="Top"                            Background="{x:Null}" Grid.Column="1" FontFamily="Honoka Antique-Maru"/>
        <Button x:ConnectionId='4' x:Name="femaleButton" Content="Female" HorizontalAlignment="Left" Margin="5.604,283,0,0" VerticalAlignment="Top"                              Grid.Column="1" FontFamily="Honoka Antique-Maru"/>
        <Image x:Name="malePlayer" HorizontalAlignment="Left" Height="467" Margin="91.604,-10,-14,0" VerticalAlignment="Top" Width="291" Source="Assets/PlayerMale.png" Stretch="UniformToFill" Grid.Column="1"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="-7.833,458,0,0" Text="Name" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" FontFamily="Honoka Antique-Maru" FontWeight="Bold" Grid.Column="1"/>
        <TextBox x:Name="title" HorizontalAlignment="Left" Margin="81.167,-2,0,0" Text="Character Selection" VerticalAlignment="Top" Grid.Column="1" Background="{x:Null}" IsReadOnly="True" BorderBrush="{x:Null}" Foreground="White" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" IsHitTestVisible="False" FontFamily="Honoka Antique-Maru" FontWeight="Bold"/>
        <ProgressRing x:Name="progressRing" Grid.Column="1" HorizontalAlignment="Left" Margin="142.167,573,0,0" VerticalAlignment="Top" Foreground="White" Background="{x:Null}"/>

        <!--<TextBox x:Name="password" HorizontalAlignment="Left" Margin="11,515,0,0" Text="Password" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFF9F9F9" BorderBrush="{x:Null}" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" FontFamily="Honoka Antique-Maru" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="passwordBox" Grid.Column="1" HorizontalAlignment="Left" Margin="107.167,513,0,0" VerticalAlignment="Top" Width="244" Height="33" PlaceholderText="Enter password" MaxLength="12" KeyDown="passwordBox_KeyDown" Tapped="passwordBox_Tapped"/>-->
    </Grid>
</Page>

