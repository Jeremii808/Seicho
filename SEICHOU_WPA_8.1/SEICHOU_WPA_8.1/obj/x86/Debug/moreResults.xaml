<Page 
    x:Class="SEICHOU_WPA_8._1.moreResults"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SEICHOU_WPA_8._1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="GrandfatherGrid">
        <Grid x:Name="FatherGrid">
            <TextBox x:Name="instructionsTextBox" HorizontalAlignment="Center" Margin="17,10,10,0" TextWrapping="Wrap" Text="Tap on any sentence to see why you got a particle right or wrong!" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" IsReadOnly="True" Height="70" Width="373" FontFamily="Honoka Antique-Maru" TextAlignment="Center" BorderBrush="{x:Null}" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" SelectionHighlightColor="{x:Null}"/>

            <ScrollViewer x:Name="scrollViewer" HorizontalAlignment="Left" Height="563" VerticalAlignment="Top" Width="400" VerticalScrollMode="Enabled" Margin="0,77,0,0">
                <Grid x:Name="ChildGrid" Height="Auto">

                    <StackPanel x:Name="stackPanel" />
                    <Button x:ConnectionId='2' x:Name="backButton" Content="Back" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Bottom" FontFamily="Honoka Antique-Maru"                           />

                </Grid>
            </ScrollViewer>
        </Grid>

        <Image x:Name="elder" HorizontalAlignment="Left" Height="444" Margin="-32,186,0,0" VerticalAlignment="Top" Width="203" Source="Assets/villageelder.png" IsHitTestVisible="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" Stretch="UniformToFill" Visibility="Collapsed"/>
        <TextBox x:ConnectionId='1' x:Name="elderTextBox" Margin="10,481,10,0" Height="78" BorderBrush="White" Background="Black" Foreground="White" IsReadOnly="True" IsTabStop="False" IsTextPredictionEnabled="False"                              TextWrapping="Wrap" Text="" IsHitTestVisible="True" IsSpellCheckEnabled="False" Header="{x:Null}" FontFamily="Honoka Antique-Maru" FontSize="16" Visibility="Collapsed"/>
    </Grid>
</Page>

