<Page
    x:Class="SEICHOU_WPA_8._1.Shop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SEICHOU_WPA_8._1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:Name="background" HorizontalAlignment="Center" Height="100" Margin="0,0,0,0" VerticalAlignment="Center" Width="100" Source="Assets/Start 2.jpg" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <CompositeTransform ScaleX="7" ScaleY="7"/>
            </Image.RenderTransform>
        </Image>
        <!--<TextBox x:Name="boostShop" HorizontalAlignment="Center" Margin="41,41,83,520" TextWrapping="Wrap" Text="BOOST SHOP" VerticalAlignment="Center" Background="{x:Null}" Foreground="White" RenderTransformOrigin="0.493,0.506" BorderBrush="{x:Null}" IsTabStop="False" IsTextPredictionEnabled="False" IsReadOnly="True" FontSize="42.667" Height="79"/>-->
        <TextBox x:Name="coins" HorizontalAlignment="Center" Margin="35,129,47,449" TextWrapping="Wrap" Text="Total Coins:" VerticalAlignment="Center" Background="{x:Null}" Foreground="White" RenderTransformOrigin="0.467,0.812" BorderBrush="{x:Null}" IsTabStop="False" IsTextPredictionEnabled="False" IsReadOnly="True" FontSize="42.667" Width="318" IsHitTestVisible="False"/>
        <Image x:ConnectionId='1' x:Name="heal" HorizontalAlignment="Left" Height="100" Margin="50,402,0,0" VerticalAlignment="Top" Width="100" Source="Assets/healheart.png"                     />
        <Image x:ConnectionId='2' x:Name="time" HorizontalAlignment="Left" Height="100" Margin="50,234,0,0" VerticalAlignment="Top" Width="100" Source="Assets/stoptime.png"                     />
        <Image x:Name="healcover" HorizontalAlignment="Left" Height="100" Margin="50,402,0,0" VerticalAlignment="Top" Width="100" Source="Assets/coverpowerups.png" Opacity="0.5"/>
        <Image x:Name="timecover" HorizontalAlignment="Left" Height="100" Margin="50,234,0,0" VerticalAlignment="Top" Width="100" Source="Assets/coverpowerups.png" Opacity="0.5"/>
        <ProgressRing x:Name="progressRing" HorizontalAlignment="Left" Margin="102,193,0,0" VerticalAlignment="Top" Height="257" Width="212" Background="{x:Null}" Foreground="White"/>
        <TextBox x:Name="totaltime" HorizontalAlignment="Center" Margin="143,248,128,312" TextWrapping="Wrap" Text="Time Boost Quantity:" VerticalAlignment="Center" Background="{x:Null}" Foreground="White" RenderTransformOrigin="0.467,0.812" BorderBrush="{x:Null}" IsTabStop="False" IsTextPredictionEnabled="False" IsReadOnly="True" FontSize="20" Width="129" Height="80" TextAlignment="Center"/>
        <Button x:ConnectionId='3' x:Name="buytime" Content="Buy Boost" HorizontalAlignment="Left" Margin="271,255,0,0" VerticalAlignment="Top" Background="Black"                        />
        <Button x:ConnectionId='4' x:Name="buyheal" Content="Buy Boost" HorizontalAlignment="Left" Margin="271,423,0,0" VerticalAlignment="Top" Background="Black"                        />
        <TextBox x:Name="totalheal" HorizontalAlignment="Left" Margin="143,418,0,0" TextWrapping="Wrap" Text="Heal Boost Quantity:" VerticalAlignment="Top" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Height="89" Width="127" TextAlignment="Center" FontSize="20"/>
        <TextBox x:Name="boostshop" HorizontalAlignment="Left" Margin="40,32,0,0" TextWrapping="Wrap" Text="Boost Shop" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="56" Width="318" TextAlignment="Center" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False"/>
        <TextBox x:Name="description" HorizontalAlignment="Left" Margin="75,251,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="204" Width="242" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" Background="Black" Foreground="White" Visibility="Collapsed"/>
        <Button x:ConnectionId='5' x:Name="closedescription" Content="Close" HorizontalAlignment="Left" Margin="141,469,0,0" VerticalAlignment="Top" Background="Black"                                  Visibility="Collapsed"/>
        <Button x:ConnectionId='6' x:Name="back" Content="Back" HorizontalAlignment="Left" Margin="153,582,0,0" VerticalAlignment="Top"                     />
        <Button x:ConnectionId='7' x:Name="yes" Content="Yes" HorizontalAlignment="Left" Margin="69,373,0,0" VerticalAlignment="Top" Background="Black"                     Visibility="Collapsed"/>
        <Button x:ConnectionId='8' x:Name="no" Content="No" HorizontalAlignment="Left" Margin="208,373,0,0" VerticalAlignment="Top" Background="Black"                    Visibility="Collapsed"/>
        <TextBox x:Name="wannabuy" HorizontalAlignment="Left" Margin="69,311,0,0" TextWrapping="Wrap" Text="Do you want to buy the time boost for 1,000 coins?" VerticalAlignment="Top" Width="280" Background="#FF0A0000" Foreground="White" TextAlignment="Center" Visibility="Collapsed" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False"/>
        <TextBox x:Name="help" HorizontalAlignment="Center" Margin="10,510,10,65" TextWrapping="Wrap" Text="Click on the boost picture to see a description of what the it does." VerticalAlignment="Center" Height="65" Width="380" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" TextAlignment="Center"/>

        <!--<TextBox x:Name="totalheal" HorizontalAlignment="Center" Margin="155,425,133,322" TextWrapping="Wrap" Text="Heal Boost Quantity:" VerticalAlignment="Center" Background="{x:Null}" Foreground="White" RenderTransformOrigin="0.467,0.812" BorderBrush="{x:Null}" IsTabStop="False" IsTextPredictionEnabled="False" IsReadOnly="True" FontSize="20" Width="116" Height="80" TextAlignment="Center"/>-->

    </Grid>
</Page>

