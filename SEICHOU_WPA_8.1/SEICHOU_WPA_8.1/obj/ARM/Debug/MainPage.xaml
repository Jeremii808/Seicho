<Page
    x:Class="SEICHOU_WPA_8._1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SEICHOU_WPA_8._1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="Main_Page">
        <Image x:Name="background" HorizontalAlignment="Center" Height="692" VerticalAlignment="Center" Width="400" Source="Assets/Start 1.jpg" Stretch="Fill" NineGrid="0" Grid.ColumnSpan="2" Margin="0,-27,0,-25"/>
        <TextBox x:Name="seichou" HorizontalAlignment="Left" Margin="91,200,0,311" TextWrapping="Wrap" Text="成長" VerticalAlignment="Stretch" Background="{x:Null}" FontSize="96" BorderBrush="{x:Null}" FontFamily="Honoka Antique-Maru" FontWeight="Bold" Foreground="Black" TextAlignment="Center" Grid.ColumnSpan="2" Width="217" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False"/>
        <TextBox x:ConnectionId='1' x:Name="userName_TextBox" HorizontalAlignment="Left" Margin="138,373,0,0" VerticalAlignment="Top" Width="244" PlaceholderText="Enter user name" MaxLength="12" FontFamily="Honoka Antique-Maru" Height="34"                                                                     Grid.ColumnSpan="2"                                           />
        <TextBox x:Name="userName" HorizontalAlignment="Left" Margin="11,370,0,0" Text="User Name" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFF9F9F9" BorderBrush="{x:Null}" IsTabStop="False" IsTextPredictionEnabled="False" FontFamily="Honoka Antique-Maru" FontWeight="Bold" Height="39" Width="127" IsHitTestVisible="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsReadOnly="True"/>
        <PasswordBox x:ConnectionId='2' x:Name="passwordBox" HorizontalAlignment="Left" Margin="138,425,0,0" VerticalAlignment="Top" Width="244" Height="34" PlaceholderText="Enter password" MaxLength="12"                                                           Grid.ColumnSpan="2"                                              />
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="11,427,0,0" Text="Password" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFF9F9F9" BorderBrush="{x:Null}" IsReadOnly="True" IsHitTestVisible="False" IsTabStop="False" IsTextPredictionEnabled="False" FontFamily="Honoka Antique-Maru" FontWeight="Bold" Height="39" Width="115"/>
        <Button x:ConnectionId='3' x:Name="logIn_Button" Content="Log In" HorizontalAlignment="Left" Margin="123,0,0,120" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" FontFamily="Honoka Antique-Maru"                              Grid.ColumnSpan="2" Height="58" Width="159" Visibility="Collapsed"/>
        <ProgressRing x:Name="progressRing" HorizontalAlignment="Left" Margin="164,567,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.526,0.871" Background="{x:Null}" Height="68" Width="78" Foreground="White" Grid.ColumnSpan="2"/>
    </Grid>
</Page>

